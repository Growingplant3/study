<p id="notice"><%= notice %></p>

<div class="show-photo">
  <div class="message-color">
    <p id="p-first">
      <strong>名前:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>メールアドレス:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>性別:</strong>
      <%= @user.sex_i18n %>
    </p>

    <p>
      <strong>年齢:</strong>
      <%= @user.age %>
    </p>

    <% if @user.image? %>
      <%= image_tag @user.image.url, :width => '2%' %>
    <% else %>
      <p>残念！画像がありませんでした。</p>
    <% end %>

    <%= link_to '編集する', edit_user_path(@user) %> |
    <%= link_to '削除する', "/users/#{current_user.id}", method: :delete, data: { confirm: '本当に削除しても良いですか？'} %> |
    <%#= link_to '戻る', users_path %>
  </div>
  <img src="/assets/jack-church-CBa301Yn7F8-unsplash.jpg" width="100%" height:"100%">
</div>