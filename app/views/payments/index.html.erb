<p id="notice"><%= notice %></p>

<h1>履歴確認</h1>

<table>
  <thead>
    <tr>
      <th>日にち</th>
      <th>分類</th>
      <th>金額</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.input_date.strftime("%Y年%m月%d日") %></td>
        <td><%= payment.category_i18n %></td>
        <td><%= payment.money %></td>
        <td><%= link_to '詳細表示', payment %></td>
        <td><%= link_to '編集する', edit_payment_path(payment) %></td>
        <td><%= link_to '削除する', payment, method: :delete, data: { confirm: '本当に削除しても良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>